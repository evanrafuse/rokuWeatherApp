<?xml version="1.0" encoding="utf-8" ?>
    <component name="category_screen" extends="Group">
      <script type="text/brightscript" uri="pkg:/components/screens/category_screen.brs" />
      <interface>
        <field id="category_selected"
          type="assocarray"
          alias="category_list.itemSelected"
        />
      </interface>
      <children>
        <!-- color="0x000000" -->
        <Label
          translation="[75, 150]"
            id="env"
            font="font:LargeBoldSystemFont"
            text="PICK A CATEGORY:"/>
        <RadioButtonList
          id="category_list"
          translation="[100, 200]"
          itemSize="[400,48]"
        >
            <ContentNode id = "categories" role = "content" >
              <category_node title = "Halifax" feed_url="pkg:/images/cities.json"/>
              <category_node title = "Toronto" feed_url="pkg:/images/cities.json"/>
              <category_node title = "Vancouver" feed_url="pkg:/images/cities.json"/>
            <!-- Ampersand "&" has to be "&amp;" because xml -->
              <!-- <category_node title = "Halifax" feed_url='https://api.openweathermap.org/data/2.5/weather?q=Halifax,CA&amp;appid=6b8afb74e995c5015cfcfb7d0796fca2&amp;units=metric'/>
              <category_node title = "Toronto" feed_url="https://api.openweathermap.org/data/2.5/weather?q=Toronto,CA&amp;appid=6b8afb74e995c5015cfcfb7d0796fca2&amp;units=metric"/>
              <category_node title = "Vancouver" feed_url="https://api.openweathermap.org/data/2.5/weather?q=Vancouver,CA&amp;appid=6b8afb74e995c5015cfcfb7d0796fca2&amp;units=metric"/> -->
            </ContentNode>
        </RadioButtonList>
      </children>
    </component>