<?xml version="1.0" encoding="utf-8" ?> 

<component name="WeatherReport" extends="Group" >
    <children>
        <LayoutGroup layoutDirection="vert" vertAlignment="top" itemSpacings="10" translation="[0,0]" >
            <Label id="cityText" horizAlign="center" translation="[0,0]" font="font:LargeBoldSystemFont" width="500" height="65" text="City"/>
            <!-- Temp Data -->
            <Label id="tempHeader" horizAlign="left" translation="[0,0]" font="font:MediumBoldSystemFont" width="500" height="30" text="Temperature:"/>
            <Label id="feelsTempText" horizAlign="left" translation="[0,0]" font="font:MediumSystemFont" width="500" height="30" text="Feels Like Temperature"/>
            <Label id="rangeTempText" horizAlign="left" translation="[0,0]" font="font:MediumSystemFont" width="500" height="30" text="Temp Range"/>
            <Label id="tempText" horizAlign="left" translation="[0,0]" font="font:MediumSystemFont" width="500" height="30" text="Current Temp"/>
            <!-- Precipitation Data -->
            <Label id="precipHeader" horizAlign="left" translation="[0,0]" font="font:MediumBoldSystemFont" width="500" height="30" text="Precipitation:"/>
            <Label id="precipText" horizAlign="left" translation="[0,0]" font="font:MediumSystemFont" width="500" height="30" text="Total and Type"/>
            <!-- Wind Data -->
            <Label id="windHeader" horizAlign="left" translation="[0,0]" font="font:MediumBoldSystemFont" width="500" height="30" text="Wind:"/>
            <Label id="windText" horizAlign="left" translation="[0,0]" font="font:MediumSystemFont" width="500" height="30" text="Speed and Direction"/>
        </LayoutGroup>
    </children>
</component>